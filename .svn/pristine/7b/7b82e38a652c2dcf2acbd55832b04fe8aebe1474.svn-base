<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- @author https://www.facebook.com/groups/mybatis/ -->
<mapper namespace="org.ulis.persistence.SendMapper">
    <resultMap id="sendResultMap" type="org.ulis.domain.Send">
        <id column="SEND_NO" property="sendNo" />
        <result column="ADMINISTRATOR_NO" property="administratorNo" />
        <result column="INTEGRATION_MESSAGE_NO" property="integrationMessageNo" />
        <result column="STUDENT_NO" property="studentNo" />
        <result column="SEND_DATE" property="sendDate" />
        <result column="SEND_STATUS" property="sendStatus" />
    </resultMap>

	<resultMap id="sendAndsubQueryResultMap" type="java.util.Map">
        <id column="ADMINISTRATOR_NO" property="administratorNo" />
        <result column="SEND_NO" property="sendNo" />
        <result column="STUDENT_NO" property="studentNo" />
        <result column="GRADE" property="grade" />
        <result column="STUDENT_NAME" property="studentName" />
        <result column="INTEGRATION_MESSAGE_NO" property="integrationMessageNo" />
        <result column="TITLE" property="title" />
        <result column="SEND_DATE" property="sendDate" />
    </resultMap>
	
    <sql id="whereSql">
        <where>
            <if test="sendNo > 0">
                AND SEND_NO = #{sendNo}
            </if>
            <if test="administratorNo != null and administratorNo != ''">
                AND ADMINISTRATOR_NO = #{administratorNo}
            </if>
            <if test="integrationMessageNo > 0">
                AND INTEGRATION_MESSAGE_NO = #{integrationMessageNo}
            </if>
            <if test="studentNo != null and studentNo != ''">
                AND STUDENT_NO = #{studentNo}
            </if>
            <if test="sendDate != null and sendDate != ''">
                AND SEND_DATE = #{sendDate}
            </if>
            <if test="sendStatus != null and sendStatus != ''">
                AND SEND_STATUS = #{sendStatus}
            </if>
        </where>
    </sql>

    <!-- ��ü �Ǽ� ��ȸ ���� ���� -->
    <select id="count" parameterType="org.ulis.domain.Send" resultType="int">
        SELECT COUNT(*) 
        FROM SEND
        <include refid="whereSql" />
    </select>

    <!-- ��� ��ȸ ���� ���� -->
    <select id="list" parameterType="org.ulis.domain.Send" resultMap="sendResultMap">
        SELECT * 
        FROM (
            SELECT ROW_NUMBER() OVER(ORDER BY SEND_NO) RN
                  ,SEND_NO
                  ,ADMINISTRATOR_NO
                  ,INTEGRATION_MESSAGE_NO
                  ,STUDENT_NO
                  ,SEND_DATE
                  ,SEND_STATUS
            FROM SEND
            <include refid="whereSql" />
        ) TB
        <where>
        	AND ADMINISTRATOR_NO = #{administratorNo}
            <if test="itemStart > -1">
                RN BETWEEN (#{itemStart} + 1) 
                       AND (#{itemStart} + #{itemSizePerPage})
            </if>
        </where>
    </select>

    <!-- ��ȸ ���� ���� -->
    <select id="select" parameterType="org.ulis.domain.Send" resultMap="sendResultMap">
        SELECT 
            SEND_NO,
            ADMINISTRATOR_NO,
            INTEGRATION_MESSAGE_NO,
            STUDENT_NO,
            SEND_DATE,
            SEND_STATUS
        FROM SEND
        <include refid="whereSql" />
    </select>

	<select id="selectOne" parameterType="int" resultType="java.util.Map">
            SELECT 
            SEND_NO as sendNo,
            ADMINISTRATOR_NO as administratorNo,
            INTEGRATION_MESSAGE_NO as integrationMessageNo,
            (
                SELECT TITLE
                FROM INTEGRATION_MESSAGE
                WHERE INTEGRATION_MESSAGE.INTEGRATION_MESSAGE_NO = SEND.INTEGRATION_MESSAGE_NO
            ) integrationMessageTitle,
            (
                SELECT CONTENT
                FROM INTEGRATION_MESSAGE
                WHERE INTEGRATION_MESSAGE.INTEGRATION_MESSAGE_NO = SEND.INTEGRATION_MESSAGE_NO
            ) integrationMessageContent,
            STUDENT_NO as studentNo,
            SEND_DATE as sendDate,
            SEND_STATUS as sendStatus
            FROM SEND
        <where>
            <if test="sendNo > 0">
                AND SEND_NO = #{sendNo}
            </if>
       </where>
    </select>
	
	<select id="selectList" parameterType="java.lang.String" resultMap="sendAndsubQueryResultMap">
         SELECT 
            SEND_NO,
		    STUDENT_NO,
		    (
		        SELECT GRADE FROM STUDENT WHERE STUDENT.STUDENT_NO = SEND.STUDENT_NO
		    ) GRADE,
		    (
		        SELECT STUDENT_NAME  FROM STUDENT WHERE STUDENT.STUDENT_NO = SEND.STUDENT_NO
		    ) STUDENT_NAME,
		    INTEGRATION_MESSAGE_NO,
		    (
		        SELECT TITLE FROM INTEGRATION_MESSAGE WHERE INTEGRATION_MESSAGE.INTEGRATION_MESSAGE_NO = SEND.INTEGRATION_MESSAGE_NO
		    ) TITLE,
		    SEND_DATE
		    FROM SEND 
        <where>
        	AND ADMINISTRATOR_NO = #{id}
        </where>
    </select>
	
    <!-- ��� ���� ���� -->
    <insert id="insert" parameterType="org.ulis.domain.Send">
        <!-- �ڵ� ���� Ű ��ȸ -->
        <selectKey keyColumn="SEND_NO" keyProperty="sendNo" resultType="int" order="BEFORE" >
            SELECT SEND_NO_SEQ.NEXTVAL
            FROM DUAL
        </selectKey>
        INSERT INTO SEND (
            SEND_NO,
            ADMINISTRATOR_NO,
            INTEGRATION_MESSAGE_NO,
            STUDENT_NO,
            SEND_DATE,
            SEND_STATUS
        )
        VALUES (
            #{sendNo},
            #{administratorNo},
            #{integrationMessageNo},
            #{studentNo},
            #{sendDate},
            #{sendStatus}
        )
    </insert>
	
    <!-- ���� ���� ���� -->
    <update id="update" parameterType="org.ulis.domain.Send">
        UPDATE SEND
        <set>
            <if test="sendNo > 0">
                SEND_NO = #{sendNo},
            </if>
            <if test="administratorNo != null">
                ADMINISTRATOR_NO = #{administratorNo},
            </if>
            <if test="integrationMessageNo > 0">
                INTEGRATION_MESSAGE_NO = #{integrationMessageNo},
            </if>
            <if test="studentNo != null">
                STUDENT_NO = #{studentNo},
            </if>
            <if test="sendDate != null">
                SEND_DATE = #{sendDate},
            </if>
            <if test="sendStatus != null">
                SEND_STATUS = #{sendStatus},
            </if>
        </set>
        <where>
            <if test="sendNo > 0">
                AND SEND_NO = #{sendNo}
            </if>
        </where> 
    </update>

    <!-- ���� ���� ���� -->
    <delete id="delete" parameterType="int">
        DELETE FROM SEND 
        <where>
            <if test="sendNo > 0">
                AND SEND_NO = #{sendNo}
            </if>
        </where> 
    </delete>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- @author https://www.facebook.com/groups/mybatis/ -->
<mapper namespace="org.mybatis.mapper.IntegrationMessageMapper">
    <resultMap id="integrationMessageResultMap" type="org.mybatis.domain.IntegrationMessage">
        <id column="INTEGRATION_MESSAGE_NO" property="integrationMessageNo" />
        <result column="TITLE" property="title" />
        <result column="CONTENT" property="content" />
    </resultMap>

    <sql id="whereSql">
        <where>
            <if test="integrationMessageNo > 0">
                AND INTEGRATION_MESSAGE_NO = #{integrationMessageNo}
            </if>
            <if test="title != null and title != ''">
                AND TITLE = #{title}
            </if>
            <if test="content != null and content != ''">
                AND CONTENT = #{content}
            </if>
        </where>
    </sql>

    <!-- ��ü �Ǽ� ��ȸ ���� ���� -->
    <select id="count" parameterType="org.mybatis.domain.IntegrationMessage" resultType="int">
        SELECT COUNT(*) 
        FROM INTEGRATION_MESSAGE
        <include refid="whereSql" />
    </select>

    <!-- ��� ��ȸ ���� ���� -->
    <select id="list" parameterType="org.mybatis.domain.IntegrationMessage" resultMap="integrationMessageResultMap">
        SELECT * 
        FROM (
            SELECT ROW_NUMBER() OVER(ORDER BY INTEGRATION_MESSAGE_NO) RN
                  ,INTEGRATION_MESSAGE_NO
                  ,TITLE
                  ,CONTENT
            FROM INTEGRATION_MESSAGE
            <include refid="whereSql" />
        ) TB
        <where>
            <if test="itemStart > -1">
                RN BETWEEN (#{itemStart} + 1) 
                       AND (#{itemStart} + #{itemSizePerPage})
            </if>
        </where>
    </select>

    <!-- ��ȸ ���� ���� -->
    <select id="select" parameterType="org.mybatis.domain.IntegrationMessage" resultMap="integrationMessageResultMap">
        SELECT 
            INTEGRATION_MESSAGE_NO,
            TITLE,
            CONTENT
        FROM INTEGRATION_MESSAGE
        <include refid="whereSql" />
    </select>

    <!-- ��� ���� ���� -->
    <insert id="insert" parameterType="org.mybatis.domain.IntegrationMessage">
        <!-- �ڵ� ���� Ű ��ȸ -->
        <selectKey keyColumn="INTEGRATION_MESSAGE_NO" keyProperty="integrationMessageNo" resultType="int" order="BEFORE" >
            SELECT INTEGRATION_MESSAGE_NO_SEQ.NEXTVAL
            FROM DUAL
        </selectKey>
        INSERT INTO INTEGRATION_MESSAGE (
            INTEGRATION_MESSAGE_NO,
            TITLE,
            CONTENT
        )
        VALUES (
            #{integrationMessageNo},
            #{title},
            #{content}
        )
    </insert>

    <!-- ���� ���� ���� -->
    <update id="update" parameterType="org.mybatis.domain.IntegrationMessage">
        UPDATE INTEGRATION_MESSAGE
        <set>
            <if test="integrationMessageNo > 0">
                INTEGRATION_MESSAGE_NO = #{integrationMessageNo},
            </if>
            <if test="title != null">
                TITLE = #{title},
            </if>
            <if test="content != null">
                CONTENT = #{content},
            </if>
        </set>
        <where>
            <if test="integrationMessageNo > 0">
                AND INTEGRATION_MESSAGE_NO = #{integrationMessageNo}
            </if>
        </where> 
    </update>

    <!-- ���� ���� ���� -->
    <delete id="delete" parameterType="int">
        DELETE FROM INTEGRATION_MESSAGE 
        <where>
            <if test="integrationMessageNo > 0">
                AND INTEGRATION_MESSAGE_NO = #{integrationMessageNo}
            </if>
        </where> 
    </delete>
</mapper>